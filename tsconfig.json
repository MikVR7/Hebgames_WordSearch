{
  "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/scripts",
      "rootDir": "./src/scripts",
      "sourceMap": true,
      "lib": ["ES6", "DOM"],
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["aws-sdk"]
  },
  "include": ["src/**/*", "lib"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}